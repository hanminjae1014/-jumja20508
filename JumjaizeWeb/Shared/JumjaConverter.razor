<h3>JumjaConverter</h3>

<p>한글 점자의 특수 규칙을 모두 무시하고, 단순히 한글을 1:1로 점자로 변환하는 예제</p>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <textarea class="form-control" rows="10" @bind="inputText"></textarea>
        </div>
        <div class="col-">
        </div>
        <div class="col-sm">
            <textarea class="form-control" rows="10" @bind="jumjaResult"></textarea>
        </div>
    </div>
    <div class="row">
        <button class="btn btn-primary" @onclick="ConvertJumja">Convert</button>
    </div>
</div>

@code {
    private string inputText = "한글";
    private string jumjaResult;
    private async Task ConvertJumja(MouseEventArgs e)
    {
        await Task.Run(() =>
        {
            var jumjaize = new Jumjaize.Jumjaize();
            jumjaResult = jumjaize.ToJumjaWithoutRules(inputText);
        });
    }
}
